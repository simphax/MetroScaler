<Window x:Class="MetroScaler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Metro Scaler" Height="377" Width="336" ResizeMode="NoResize">
    <Grid>
        <Image Name="preview" HorizontalAlignment="Left" Height="169" Margin="10,10,-6,0" VerticalAlignment="Top" Width="300" Source="Resources/10.png"/>
        <Slider Name="slider" HorizontalAlignment="Left" Margin="10,239,0,0" VerticalAlignment="Top" Height="20" Width="300" ValueChanged="slider_ValueChanged"/>
        <Label Content="Set display scaling as" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="31" Margin="10,197,0,0" VerticalAlignment="Top" Width="192" FontFamily="Segoe UI Semibold" FontSize="16"/>
        <Label Name="valueLabel" Content="15&quot;" HorizontalAlignment="Left" Margin="210,190,0,0" VerticalAlignment="Top" FontSize="24" FontFamily="Segoe UI Semibold" Width="100"/>
        <Button Content="Scale" HorizontalAlignment="Left" Margin="258,293,0,0" VerticalAlignment="Top" Width="52" Height="35" Background="#FFECECEC" BorderBrush="#FFD1D1D1" FontFamily="Segoe UI Semibold" Click="btnScale_Click"/>
        <Button Content="Reset to default" HorizontalAlignment="Left" Margin="10,293,0,0" VerticalAlignment="Top" Width="114" Height="35" Background="White" BorderBrush="WhiteSmoke" Click="btnReset_Click"/>
    </Grid>
</Window>
